import pandas as pd
from sklearn.tree import DecisionTreeClassifier
from sklearn.model_selection import train_test_split
from sklearn.metrics import accuracy_score
from sklearn import tree
import matplotlib.pyplot as plt

# Load dataset
data = pd.read_csv("sympt_diseases.csv")

# Features and target
X = data.drop(columns=["Disease"])
y = data["Disease"]

# Train-test split
X_train, X_test, y_train, y_test = train_test_split(
    X, y, test_size=0.1, random_state=42
)

# Train model
model = DecisionTreeClassifier(max_depth=None, min_samples_split=2)
model.fit(X_train, y_train)

# Evaluate model
predictions = model.predict(X_test)
score = accuracy_score(y_test, predictions)
print(f"Accuracy: {score}")

# ---------------- INPUT FUNCTION ---------------- #

def get_input(msg):
    while True:
        try:
            value = int(input(msg))
            if value in [0, 1, 2]:
                return value
            else:
                print("Invalid input! Please enter 2 for Severe, 1 for Mild, or 0 for No.")
        except ValueError:
            print("Invalid input! Please enter a valid integer (2, 1, or 0).")

# ---------------- USER INTERFACE ---------------- #

print("\n AI Health Assistant ")
print("Enter your symptoms:")
print("Press 2 for Severe symptom, 1 for Mild symptom, and 0 for No symptom\n")

sneezing = get_input("How often do you sneeze per day?\n(No sneezing(0), Occasionally(1), Frequently(2)): ")
cough = get_input("Do you have a cough?: ")
sore_throat = get_input("Do you have a sore throat?: ")
runny_nose = get_input("Do you have a runny nose?: ")
headache = get_input("Do you have a headache?: ")
body_ache = get_input("Do you have body ache?: ")
fever = get_input(
    "What is your temperature range?\n"
    "Normal(0), Mild fever (99–100°F)(1), High fever (>101°F)(2): "
)
fatigue = get_input("How tired do you feel?: ")
short_breath = get_input(
    "Do you experience shortness of breath?\n"
    "None(0), During activity(1), Even at rest(2): "
)

# ---------------- PREDICTION ---------------- #

prediction = model.predict([[
    sneezing,
    cough,
    sore_throat,
    runny_nose,
    headache,
    body_ache,
    fever,
    fatigue,
    short_breath
]])

print("\nPrediction:", prediction[0])

